
@{
    ViewData["Title"] = "Index";
}

    <div id="drivers-vueapp">
        <div class="driver-page-title">
            <h1>Drivers</h1>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-3" v-for="driver in drivers">
                    <div class="driver-container" v-on:click="activeDetails = !activeDetails; driverInfo(driver.id)">
                        <p class="driver-firstname">
                            {{driver.firstName}}
                        </p>
                        <div class="flag-container">
                            <img v-bind:src="'CountryFlags/' + driver.country +'.png'" class="driver-flag" width="46" height="30.6"/>
                        </div>
                        <h3 class="driver-lastname">
                            {{driver.lastName}}
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="drivers-details" v-show="activeDetails">
            <div class="driver-number">
                <span class="driver-number-title">Driver Number:</span>
                <span class="driver-number-value">{{info.driverNumber}}</span>
            </div>
            <div class="driver-country">
                <span class="driver-country-title">Country:</span>
                <span class="driver-country-value">{{info.country}}</span>
            </div>
            <div class="driver-dob">
                <span class="driver-dob-title">DOB:</span>
                <span class="driver-dob-value">{{info.dob}}</span>
            </div>
            <div class="driver-placeOfBirth">
                <span class="driver-placeOfBirth-title">Place Of Birth:</span>
                <span class="driver-placeOfBirth-value">{{info.placeOfBirth}}</span>
            </div>
            <div class="driver-shortName">
                <span class="driver-shortName-title">On Track Name:</span>
                <span class="driver-shortName-value">{{info.shortName}}</span>
            </div>
        </div>





    </div>
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="~/js/Drivers.js" charset="utf-8"></script>

